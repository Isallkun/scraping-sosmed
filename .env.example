# =============================================================================
# Social Media Scraper Automation - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Scraper Configuration
# -----------------------------------------------------------------------------
# Platform to scrape: instagram, twitter, or facebook
SCRAPER_PLATFORM=instagram

# Social media account credentials for authentication
SCRAPER_USERNAME=your_username_here
SCRAPER_PASSWORD=your_password_here

# Instagram-specific configuration
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password
INSTAGRAM_TARGET_URL=https://www.instagram.com/explore/

# Twitter-specific configuration (for future use)
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password
TWITTER_TARGET_URL=https://twitter.com/explore

# Facebook-specific configuration (for future use)
FACEBOOK_USERNAME=your_facebook_username
FACEBOOK_PASSWORD=your_facebook_password
FACEBOOK_TARGET_URL=https://www.facebook.com/

# Rate limiting: requests per minute (recommended: 20-30 to avoid detection)
SCRAPER_RATE_LIMIT=30

# Maximum number of posts to scrape per execution
SCRAPER_MAX_POSTS=100

# Maximum execution time in seconds (prevents infinite loops)
SCRAPER_TIMEOUT=300

# Run browser in headless mode (true/false)
SCRAPER_HEADLESS=true

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
SCRAPER_LOG_LEVEL=INFO

# Log file path
SCRAPER_LOG_FILE=logs/scraper.log

# Log file rotation: max size in MB
SCRAPER_LOG_MAX_SIZE=10

# Log file rotation: number of backup files to keep
SCRAPER_LOG_BACKUP_COUNT=5

# -----------------------------------------------------------------------------
# Sentiment Analysis Configuration
# -----------------------------------------------------------------------------
# Sentiment model: vader or textblob
SENTIMENT_MODEL=vader

# Batch size for processing large datasets
SENTIMENT_BATCH_SIZE=100

# Sentiment classification thresholds
SENTIMENT_POSITIVE_THRESHOLD=0.05
SENTIMENT_NEGATIVE_THRESHOLD=-0.05

# Log file path
SENTIMENT_LOG_FILE=logs/sentiment.log

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL connection string
DATABASE_URL=postgresql://scraper_user:scraper_password@localhost:5432/social_scraper

# Alternative: individual connection parameters
DB_HOST=localhost
DB_PORT=5432
DB_NAME=social_scraper
DB_USER=scraper_user
DB_PASSWORD=scraper_password

# Connection pool settings
DB_POOL_MIN_CONN=2
DB_POOL_MAX_CONN=10

# Database connection timeout in seconds
DB_CONNECT_TIMEOUT=10

# Data retention policy (days)
DB_POSTS_RETENTION_DAYS=90
DB_LOGS_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# Flask Analytics Dashboard Configuration
# -----------------------------------------------------------------------------
# Flask server configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=change_this_to_a_random_secret_key

# Flask debug mode (true/false) - NEVER enable in production!
DEBUG=false

# Cache configuration
# Cache type: simple (in-memory) for development, redis for production
CACHE_TYPE=simple
CACHE_TIMEOUT=300
CACHE_REDIS_URL=redis://localhost:6379/0

# Dashboard configuration
AUTO_REFRESH_INTERVAL=30
POSTS_PER_PAGE=25

# CORS configuration (comma-separated origins, or * for all)
CORS_ORIGINS=*

# -----------------------------------------------------------------------------
# n8n Configuration
# -----------------------------------------------------------------------------
# n8n basic authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_password

# n8n webhook URL base
N8N_WEBHOOK_URL=http://localhost:5678

# n8n encryption key (generate with: openssl rand -hex 32)
N8N_ENCRYPTION_KEY=your_encryption_key_here

# n8n timezone
GENERIC_TIMEZONE=America/New_York

# -----------------------------------------------------------------------------
# Notification Configuration
# -----------------------------------------------------------------------------
# Email notifications (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=your_email@gmail.com
SMTP_TO=recipient@example.com

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#social-scraper-alerts

# Telegram notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# -----------------------------------------------------------------------------
# Backup Configuration
# -----------------------------------------------------------------------------
# Backup directory path
BACKUP_DIR=/backups

# Backup retention policy
BACKUP_DAILY_RETENTION=7
BACKUP_WEEKLY_RETENTION=4
BACKUP_MONTHLY_RETENTION=3

# -----------------------------------------------------------------------------
# Docker Configuration
# -----------------------------------------------------------------------------
# PostgreSQL Docker settings
POSTGRES_USER=scraper_user
POSTGRES_PASSWORD=scraper_password
POSTGRES_DB=social_scraper

# Redis Docker settings (optional, for n8n queue mode)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Run containers as non-root user (UID:GID)
PUID=1000
PGID=1000

# Enable/disable security features
ENABLE_RATE_LIMITING=true
ENABLE_ANTI_DETECTION=true

# -----------------------------------------------------------------------------
# Monitoring Configuration
# -----------------------------------------------------------------------------
# Health check endpoint port
HEALTH_CHECK_PORT=8080

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=60

# Alert on consecutive failures
HEALTH_CHECK_ALERT_THRESHOLD=3

# -----------------------------------------------------------------------------
# Development/Testing Configuration
# -----------------------------------------------------------------------------
# Enable debug mode (more verbose logging, disable some security features)
DEBUG_MODE=false

# Use mock data instead of real scraping (for testing)
USE_MOCK_DATA=false

# Test mode: skip authentication and use sample data
TEST_MODE=false
